<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/existing_patient_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <CheckBox
                android:id="@+id/upload_patient_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/upload_patient_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_id_placeholder"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/upload_patient_checkbox"
                android:layout_toEndOf="@id/upload_patient_checkbox"/>

            <TextView
                android:id="@+id/upload_patient_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_name_placeholder"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/upload_patient_id"
                android:layout_toEndOf="@id/upload_patient_id"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>