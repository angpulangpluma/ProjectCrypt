<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blackBackground"
    tools:context=".activities.ViewImageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/view_image"
            android:layout_width="match_parent"
            android:contentDescription="@string/attachment_display"
            android:layout_height="550dp"
            android:src="@drawable/getbetter3"/>

        <TextView
            android:id="@+id/view_image_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_image"
            android:text="@string/caption_this_image"
            android:textSize="32sp"
            android:textColor="@color/cardBackground"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"/>

        <ImageButton
            android:id="@+id/view_image_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_below="@id/view_image_caption"
            android:layout_centerHorizontal="true"
            android:background="@color/blackBackground"
            android:contentDescription="Delete Button"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/view_image_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_share"
            android:layout_below="@id/view_image_caption"
            android:layout_toRightOf="@id/view_image_delete"
            android:layout_centerHorizontal="true"
            android:background="@color/blackBackground"
            android:contentDescription="Share Button"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/view_image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_image_caption"
            android:background="@color/blueButton"
            android:text="@string/back_button_text"
            android:textColor="@color/cardBackground"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            />

    </RelativeLayout>

</FrameLayout>
